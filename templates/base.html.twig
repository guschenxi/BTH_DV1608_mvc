<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
		<header class="site-header" style="background-image: url({{ asset('img/background.avif') }})">
			<span class="site-title">My Report Site</span>
		</header>
		
		<nav>
			<ul>
				<li><a href="{{ path('home') }}">Home</a></li>
				<li><a href="{{ path('about') }}">About</a></li>
				<li><a href="{{ path('report') }}">Report</a></li>
				<li><a href="{{ path('metrics') }}">Metrics</a></li>
				<li><a href="{{ path('card_start') }}">Card(Kmom02)</a></li>
				<li><a href="{{ path('game_start') }}">Game(Kmom03)</a></li>
				<li><a href="{{ path('app_library') }}">Library(Kmom05)</a></li>
				<li><a href="{{ path('lucky') }}">Lucky</a></li>
				<li><a href="{{ path('api') }}">API</a></li>
			</ul>
		</nav>
		<main>
            {% block body %}{% endblock %}
        </main>
        <footer>
            <p>Copyright &copy; Xi Chen<br>
            Adress: Storgatan 88, 88888 Karlskrona<br>
            Telefon: 010-12345678</p>
        </footer>
    </body>
</html>
