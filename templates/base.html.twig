<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
		<header class="site-header" style="background-image: url({{ asset('img/background.avif') }})">
			<span class="site-title">My Report Site</span>
		</header>
		<nav>
			<ul>
				<li><a href="{{ path('home') }}">Home</a></li>
				<li><a href="{{ path('about') }}">About</a></li>
				<li><a href="{{ path('report') }}">Report</a></li>
				<li><a href="{{ path('lucky') }}">Lucky</a></li>
			</ul>
		</nav>
        {% block body %}{% endblock %}
        <footer>
            <p>Copyright &copy; Xi Chen</p>
            <p>Adress: Storgatan 88, 88888 Karlskrona</p>
            <p>Telefon: 010-12345678</p>
        </footer>
    </body>
</html>
