{% extends "book.base.html.twig" %}

{% block title %}Library (Kmom05){% endblock %}

{% block body %}


<h1>Book Details<h1>
<form method="post">

		    <h2>ID</h2>
	        <p>{{ book.id }}</p>
		    <h2>Title</h2>
	        <p>{{ book.title }}</p>
		    <h2>ISBN</h2>
	        <p>{{ book.isbn }}</p>
		    <h2>Author</h2>
	        <p>{{ book.author }}</p>
		    <h2>Image</h2>
	        <p>{{ book.image }}</p>
		    <h2>Action</h2>
		        <p>
		            <input type="submit" name="do_it" value="Update book"
		            	onClick="this.form.action='/library/update/{{ book.id }}';this.form.method='post';"
		            >
		            <input type="submit" name="do_it" value="Delete book"
		            	onClick="this.form.action='/library/delete/{{ book.id }}';this.form.method='post';"
		            >
		        </p>
</form>
<p>
</p>

{% endblock %}
