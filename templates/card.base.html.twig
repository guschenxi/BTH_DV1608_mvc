<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('card') }}
        {% endblock %}

        {% block javascripts %}

        {% endblock %}
    </head>
    <body>
        <header class="site-header" style="background-image: url({{ asset('img/background.avif') }})">
			<span class="site-title">My Card Game</span>
		</header>
        <nav>
            <ul>
				<li><a href="{{ path('card_start') }}">Home</a></li>
				<li><a href="{{ path('card_deck') }}">Deck</a></li>
				<li><a href="{{ path('card_shuffle') }}">Shuffle</a></li>
				<li><a href="{{ path('card_draw') }}">Draw</a></li>
			</ul>
        </nav>
        

		<main>
            {% block body %}{% endblock %}
        </main>

    </body>
</html>
